pipeline {
    agent any

    environment {
        OWNER = 'Manoj'
    }

    stages {
        stage('Create File') {
            steps {
                bat 'echo Owner: %OWNER% > env-output.txt'
                bat 'echo Build: %BUILD_NUMBER% >> env-output.txt'
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'env-output.txt'
        }
    }
}
